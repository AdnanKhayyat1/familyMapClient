<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PersonActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"

        android:orientation="vertical">
    <TextView
        android:id="@+id/fNameFixed"
        android:layout_width="73dp"
        android:layout_height="23dp"
        android:text="First Name:"
        />

        <TextView
            android:id="@+id/fNameVar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:text="TextView"
            android:gravity="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteY="25dp"
            android:background="@drawable/person_border"/>
        <TextView
            android:id="@+id/lNameFixed"
            android:layout_width="73dp"
            android:layout_height="23dp"
            android:text="Last Name:"
            />

        <TextView
            android:id="@+id/lNameVar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:text="TextView"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/person_border"
            tools:layout_editor_absoluteY="25dp" />
        <TextView
            android:id="@+id/genderFixed"
            android:layout_width="73dp"
            android:layout_height="23dp"
            android:text="Gender:"

            />

        <TextView
            android:id="@+id/genderVar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            android:background="@drawable/person_border"
            tools:layout_editor_absoluteY="25dp" />
        <ExpandableListView
            android:id="@+id/expEvents"
            android:layout_width="match_parent"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>