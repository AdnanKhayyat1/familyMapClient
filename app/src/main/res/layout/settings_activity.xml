<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/intro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:textSize="40sp"
            android:text="Settings:"
            android:textColor="@color/black"/>
    </LinearLayout>
<GridLayout
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:layout_below="@id/intro_text"
    >
    <TextView
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="Life Story Lines"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_margin="10dp"/>


    <Switch
        android:id="@+id/LS_switch"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_row="0"
        android:padding="10dp"
        android:layout_margin="10dp"
        />
    <!-- br -->
    <TextView
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="Family Tree Lines"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        />

    <Switch
        android:id="@+id/FT_switch"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_row="1"
        android:padding="10dp"
        android:layout_margin="10dp"
        />
    <!-- br -->
    <TextView
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="Spouse Lines"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Switch
        android:id="@+id/SpL_switch"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_row="2"
        android:padding="10dp"
        android:layout_margin="10dp"
        />
    <!-- br -->
    <TextView
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="Father's Lines"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Switch
        android:id="@+id/FL_switch"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_row="3"
        android:padding="10dp"
        android:layout_margin="10dp"
        />
    <!-- br -->
    <TextView
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="Mother's Lines"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Switch
        android:id="@+id/ML_switch"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_row="4"
        android:padding="10dp"
        android:layout_margin="10dp"
        />
    <!-- br -->
    <TextView
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="Male Events"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Switch
        android:id="@+id/ME_switch"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_row="5"
        android:padding="10dp"
        android:layout_margin="10dp"
        />
    <!-- br -->
    <TextView
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="Female Events"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Switch
        android:id="@+id/FE_switch"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_row="6"
        android:padding="10dp"
        android:layout_margin="10dp"
        />
</GridLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/GridLayout1"
    android:gravity="center"

    >
<Button
    android:id="@+id/logout"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:columnCount="2"
    android:text="Log Out"
    />
</LinearLayout>
</RelativeLayout>



